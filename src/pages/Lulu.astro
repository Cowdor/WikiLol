    nomb5="CRECIMIENTO SALVAJE (R)">
    </Habilidades>
<div class="container">
        <!-- Contenido existente -->
    
        <!-- Nueva sección para Runas y Build -->
        <div class="extras-section">
            <div class="left-extra">
                <h2>Runas</h2>
                <img src="../Lulu/Runa.png" alt="Imagen de Runas" class="extra-image">
            </div>
            <div class="right-extra">
                <h2>Build</h2>
                <img src="URL_DE_LA_IMAGEN_DE_BUILD" alt="Imagen de Build" class="extra-image">
            </div>
        </div>
</div>   
</body>
</html>