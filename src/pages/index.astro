<style>
	/* Estilo general */
	main {
		padding: 2rem;
		color: #FFFFFF;
		font-family: Arial, sans-serif;
		background-color: rgba(10, 20, 40, 255);
	}

	/* Hero Section */
	.hero {
		text-align: center;
		margin-bottom: 2rem;
		background-image: url('https://wallpapers.com/images/hd/1920x1080-league-of-legends-background-1920-x-1080-fyaii5aos2zulooq.jpg');
		background-size: cover;
		background-position: center;
		padding: 6rem 0;
		position: relative;
		color: white;
	}

	.hero::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, 0.6);
		z-index: 1;
	}

	.hero h1,
	.hero h2,
	.hero p,
	.buttons {
		position: relative;
		z-index: 2;
	}

	.hero h2 {
		font-size: 2.5rem;
		color: #c8aa6efe;
		text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
		margin-bottom: 1rem;
	}

	.hero h1 {
		font-size: 4.5rem;
		color: #c8aa6efe;
		text-shadow: 3px 3px 8px rgba(0, 0, 0, 0.8);
		margin-bottom: 1.5rem;
	}

	.hero p {
		margin: 2rem 0;
		font-size: 1.2rem;
		max-width: 800px;
		margin-left: auto;
		margin-right: auto;
		color: #f0f0f0;
		text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
	}

	/* Botones */
	.buttons {
		margin: 2.5rem 0;
	}

	.buttons .btn {
		padding: 1rem 2.5rem;
		border-radius: 8px;
		font-weight: bold;
		text-decoration: none;
		margin: 0 1rem;
		transition: background-color 0.3s ease, transform 0.3s ease;
		box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
	}

	.btn.gold {
		background-color: #c59c42;
		color: white;
	}

	.btn.blue {
		background-color: #1e90ff;
		color: white;
	}

	.btn:hover {
		opacity: 0.9;
		transform: translateY(-3px);
	}

	/* Categorías */
	.categories {
		display: flex;
		justify-content: space-around;
		margin: 2rem 0;
	}

	.category {
		text-align: center;
	}

	.category img {
		width: 50px;
	}

	.category span {
		display: block;
		margin-top: 0.5rem;
		font-weight: bold;
		color: #f0f0f0;
		font-size: 1rem;
	}

	/* Cartas de campeones */
	.champions {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 1.5rem;
	}

	.champion-card {
		text-align: center;
		border-radius: 10px;
		background-color: #1e2a3a;
		padding: 1rem;
		color: white;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		text-decoration: none;
	}

	.champion-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 8px 16px rgba(0, 0, 0, 0.5);
	}

	.champion-card img {
		width: 100%;
		height: auto;
		max-width: 350px;
		max-height: 400px;
		object-fit: cover;
		border-radius: 5px;
	}

	.champion-card p {
		margin-top: 0.5rem;
		font-weight: bold;
		font-size: 1.1rem;
		color: white;
	}
</style>




